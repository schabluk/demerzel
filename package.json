{
  "name": "demerzel",
  "private": true,
  "author": "Łukasz Schabek",
  "license": "ISC",
  "scripts": {
    "boot": "lerna bootstrap",
    "build": "lerna run --no-private build",
    "clean": "lerna clean && rimraf packages/*/dist && rimraf packages/*/build",
    "format": "prettier --write \"packages/src/**/*.{js,jsx}\"",
    "lint": "eslint **/*.{js,jsx} --quiet",
    "pretest": "eslint packages",
    "test": "lerna run --no-private --parallel test"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "pretty-quick --staged",
      "eslint packages/ --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.5.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.10.0",
    "rimraf": "^2.6.3",
    "strapi": "3.0.0-alpha.19",
    "typescript": "^3.2.4"
  }
}
